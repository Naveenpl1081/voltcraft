<%- include('../layouts/adminHeader') %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<main class="main-content container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 bg-white mt-5 p-4 shadow-sm">
            <h2 class="text-center mb-4">ADD CATEGORY</h2>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger text-center" role="alert">
                    <%= error %>
                </div>
            <% } %>

            <form id="addCategoryForm" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="catName" class="form-label">Category Name</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="catName" 
                        name="catName" 
                        placeholder="Enter category name" 
                        required 
                        maxlength="50"
                        pattern="^[A-Za-z0-9\s]+$"
                        title="Only alphanumeric characters and spaces are allowed."
                    >
                    <div class="invalid-feedback">
                        Please enter a valid category name (max 50 characters, no special characters).
                    </div>
                </div>
            
                <div class="mb-3">
                    <label for="description" class="form-label">Category Description</label>
                    <textarea 
                        class="form-control" 
                        id="description" 
                        name="description" 
                        placeholder="Enter category description" 
                        rows="3" 
                        required 
                        maxlength="250"
                    ></textarea>
                    <div class="invalid-feedback">
                        Please provide a valid description (max 250 characters).
                    </div>
                </div>
            
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Add Category</button>
                </div>
            </form>

        </div>
    </div>

    <!-- SweetAlert Script -->
    <script>
    document.getElementById('addCategoryForm').addEventListener('submit', async function (event) {
        event.preventDefault();
        const catName = document.getElementById('catName').value.trim();
        const description = document.getElementById('description').value.trim();

        // Check if category name or description are empty or only contain spaces
        // if (!catName || !description) {
        //     Swal.fire({
        //         icon: 'error',
        //         title: 'Validation Error',
        //         text: 'Category name and description are required.',
        //     });
        //     return;
        // }

        // Check if fields contain only spaces
        if (catName.length === 0 || description.length === 0) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Fields cannot be empty or contain only spaces.',
            });
            return;
        }

        // Validate category name pattern (alphanumeric and spaces only)
//         const catNamePattern = /^[A-Z][a-zA-Z]*(?: [A-Z][a-zA-Z]*)*$/;

// if (!catNamePattern.test(catName)) {
//     Swal.fire({
//         icon: 'error',
//         title: 'Validation Error',
//         text: 'Category name can only contain alphanumeric characters and spaces (spaces must not be at the beginning or end).',
//     });
//     return;
// }

if (/\d/.test(catName)) {
    Swal.fire({
        icon: 'error',
        title: 'Validation Error',
        text: 'Category name cannot contain numbers.',
    });
    return;
}

        // Check if the category name and description length exceed limits
        if (catName.length > 50) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Category name cannot exceed 50 characters.',
            });
            return;
        }

        if (description.length > 250) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Description cannot exceed 250 characters.',
            });
            return;
        }

        // Use fetch to submit the form data to the server
        try {
            const response = await fetch('/admin/addcategory', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ catName, description }),
            });

            const result = await response.json();

            if (response.ok) {
                // Show success message and redirect to the category info page
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: result.message,
                    willClose: () => {
                        window.location.href = '/admin/categoryInfo'; // Redirect to category info page
                    }
                });
            }else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message,
                });
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An error occurred while adding the category.',
            });
        }
    });
    </script>
</main>

<%- include('../layouts/AdminFooter') %>
