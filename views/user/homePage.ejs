    <script>
        // Set the target date and time for the countdown
        const targetDate = new Date("January 25, 2025 23:59:59").getTime();

        function updateTimer() {
            const now = new Date().getTime();
            const timeRemaining = targetDate - now;

            // Calculate days, hours, minutes, and seconds
            const days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
            const hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

            // Update the DOM elements
            document.getElementById("days").textContent = days > 0 ? days : "00";
            document.getElementById("hours").textContent = hours > 0 ? (hours < 10 ? `0${hours}` : hours) : "00";
            document.getElementById("minutes").textContent = minutes > 0 ? (minutes < 10 ? `0${minutes}` : minutes) : "00";
            document.getElementById("seconds").textContent = seconds > 0 ? (seconds < 10 ? `0${seconds}` : seconds) : "00";

            // Stop the timer if the countdown ends
            if (timeRemaining <= 0) {
                clearInterval(timerInterval);
                document.querySelector(".timer").innerHTML = "<span>Flash Sale Ended</span>";
            }
        }

        // Update the timer every second
        const timerInterval = setInterval(updateTimer, 1000);

        // Initial call to display the timer immediately
        updateTimer();
