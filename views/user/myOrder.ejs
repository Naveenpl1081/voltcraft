<body>
    <%- include('../user/layout/userHeader.ejs') %>
    <div class="container">
        <header class="header">
            <a href="#">Home</a>
            <div>Welcome!</div>
        </header>

        <div class="manage-account">
            <div class="sidebar">
                <ul class="sidebar-links">
                    <li><a href="/profile" class="active">My Profile</a></li>
                    <li><a href="/addressbook">Address Book</a></li>
                    <li><a href="#">My Payment Options</a></li>
                    <li><a href="#">Change Password</a></li>
                    <li><a href="#">My Orders</a></li>
                    <li><a href="#">My Returns</a></li>
                    <li><a href="#">My Cancellations</a></li>
                    <li><a href="#">My Wishlist</a></li>
                </ul>
            </div>

            <div id="orders-section">
                <h2 class="section-title">My Orders</h2>
                <div class="orders-section">
                    <div class="flex items-center justify-between mb-4">
                        <select class="px-4 py-2 border border-gray-300 rounded-md text-sm">
                            <option>Last 3 Months</option>
                            <option>Last 6 Months</option>
                            <option>All Orders</option>
                        </select>
                        <div class="relative">
                            <input type="text" placeholder="Search Orders" class="pl-8 pr-4 py-2 border border-gray-300 rounded-md text-sm w-64">
                        </div>
                    </div>

                    <table class="orders-table">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Items</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% order.forEach(orderItem => { %>
                                <tr>
                                    <td><%= orderItem._id %></td>
                                    <td><%= new Date(orderItem.orderDate).toLocaleDateString() %></td>
                                    <td>
                                        <% orderItem.items.forEach(item => { %>
                                            <p><%= item.quantity %> x <%= item.productId.name %></p>
                                        <% }) %>
                                    </td>
                                    <td><%= orderItem.totalAmount %></td>
                                    <td>
                                        <span class="order-status-badge 
                                            <%= orderItem.orderStatus === 'Completed' ? 'order-status-completed' :
                                                orderItem.orderStatus === 'Shipped' ? 'order-status-pending' :
                                                orderItem.orderStatus === 'Cancelled' ? 'order-status-cancelled' : '' %>">
                                            <%= orderItem.orderStatus %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="order-actions">
                                            <a href="/orderdetails/<%= orderItem._id %>" class="professional-link">View</a>
                                            <a href="#" class="professional-link">Download</a>
                                          </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="/myOrder?page=<%= i %>&limit=5" 
             class="professional-link <%= currentPage === i ? 'active' : '' %>">
            <%= i %>
          </a>
        <% } %>
      </div>

    <script>
        
        function showSection(section) {
            const profileSection = document.getElementById('profile-section');
            const ordersSection = document.getElementById('orders-section');
            const sidebarLinks = document.querySelectorAll('.sidebar-links a');

            // Reset active states
            sidebarLinks.forEach(link => link.classList.remove('active'));

            if (section === 'profile') {
                profileSection.classList.remove('hidden');
                ordersSection.classList.add('hidden');
                document.querySelector('.sidebar-links a:first-child').classList.add('active');
            } else if (section === 'orders') {
                profileSection.classList.add('hidden');
                ordersSection.classList.remove('hidden');
                document.querySelector('.sidebar-links a:nth-child(2)').classList.add('active');
            }
        }
   
    </script>
