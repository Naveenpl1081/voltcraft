    <!-- Timer Script -->
    <script>
        let timerElement = document.getElementById('timer');
        let resendLink = document.getElementById('resend-link');
        let timeLeft = 60;

        function updateTimer() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            timerElement.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
            timeLeft--;

            if (timeLeft < 0) {
                clearInterval(timerInterval);
                timerElement.textContent = "0:00";
                resendLink.style.pointerEvents = "auto";
                resendLink.style.opacity = "1";
            }
        }

        const timerInterval = setInterval(updateTimer, 1000);

        function validateOTPForm() {
            const otpInput = document.querySelector('input[name="otp"]').value;
            
            if (!otpInput || otpInput.length !== 6) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid OTP',
                    text: 'Please enter a valid 6-digit OTP'
                });
                return false;
            }

            // Using fetch instead of jQuery AJAX for better compatibility
            fetch('/verify-otp', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ otp: otpInput })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'OTP verified successfully',
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        window.location.href = data.redirectUrl || '/homePage';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Invalid OTP',
                        text: data.message || 'Please try again'
                    });
                }
            })
            .catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Something went wrong. Please try again.'
                });
            });

            return false;
        }

        function resendOTP() {
            // Disable resend button immediately
            resendLink.style.pointerEvents = 'none';
            resendLink.style.opacity = '0.5';
            
            // Reset and restart timer
            clearInterval(window.timerInterval);
            timeLeft = 60;
            updateTimer();
            window.timerInterval = setInterval(updateTimer, 1000);

            // Using fetch for resend OTP
            fetch('/resend-otp', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'OTP has been resent to your email',
                        showConfirmButton: false,
                        timer: 1500
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: data.message || 'Failed to resend OTP'
                    });
                    // Re-enable resend link if failed
                    resendLink.style.pointerEvents = 'auto';
                    resendLink.style.opacity = '1';
                }
            })
            .catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Failed to resend OTP. Please try again.'
                });
                // Re-enable resend link if failed
                resendLink.style.pointerEvents = 'auto';
                resendLink.style.opacity = '1';
            });
        }
    </script>
</body>
