<!DOCTYPE html>
<html>
<head>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        body {
            background-color: #f5f5f5;
        }

        .container {
            max-width: 1100px;
            margin: 20px auto;
            padding: 40px 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 20px;
            border-bottom: 1px solid #ddd;
        }

        .header a {
            color: #DB4444;
            text-decoration: none;
            font-size: 20px;
            font-weight: bold;
        }

        .header div {
            font-size: 18px;
            color: #666;
        }

        .manage-account {
            display: flex;
            margin-top: 20px;
        }

        .sidebar {
            width: 25%;
            padding: 20px;
            border-right: 1px solid #ddd;
        }

        .sidebar-links {
            list-style: none;
        }

        .sidebar-links li {
            margin-bottom: 12px;
        }

        .sidebar-links a {
            color: #000;
            text-decoration: none;
            font-size: 16px;
            transition: color 0.3s ease;
        }

        .sidebar-links a.active,
        .sidebar-links a:hover {
            color: #DB4444;
            font-weight: bold;
        }

        .content {
            width: 75%;
            padding: 20px;
        }

        .section-title {
            font-size: 24px;
            margin-bottom: 24px;
            color: #333;
        }

        .profile-form {
            padding: 30px;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-row {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-row > div {
            flex: 1;
        }

        .profile-form label {
            display: block;
            margin-bottom: 8px;
            font-size: 14px;
            color: #666;
        }

        .input-field {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        .input-field:focus {
            outline: none;
            border-color: #DB4444;
        }

        .gender-field {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .gender-field label {
            font-size: 16px;
            color: #666;
        }

        .actions {
            display: flex;
            justify-content: flex-end;
            gap: 16px;
            margin-top: 32px;
        }

        .cancel-button,
        .save-button {
            padding: 12px 24px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .cancel-button {
            background-color: #f5f5f5;
            color: #666;
        }

        .cancel-button:hover {
            background-color: #ddd;
        }

        .save-button {
            background-color: #DB4444;
            color: #fff;
        }

        .save-button:hover {
            background-color: #c83c3c;
        }
    </style>
</head>
<body>
    <%- include('../user/layout/userHeader.ejs') %>
    <div class="container">
        <header class="header">
            <a href="#">Home</a>
            <div>Welcome! <%= user.name %></div>
        </header>

        <div class="manage-account">
            <div class="sidebar">
                <ul class="sidebar-links">
                    <li><a href="/profile" class="active">My Profile</a></li>
                    <li><a href="/addressbook">Address Book</a></li>
                    <li><a href="#">My Payment Options</a></li>
                    <li><a href="#">Change Password</a></li>
                    <li><a href="/myorder">My Orders</a></li>
                    <li><a href="#">My Returns</a></li>
                    <li><a href="#">My Cancellations</a></li>
                    <li><a href="#">My Wishlist</a></li>
                </ul>
            </div>

            <div class="content">
                <h2 class="section-title">Edit Your Profile</h2>
                <div class="profile-form">
                    <div class="form-row">
                        <div>
                            <label for="name">Name</label>
                            <input type="text" id="name" class="input-field" name="name" value="<%= user.name %>" />
                        </div>
                        <div class="form-row">
                            <div>
                                <label for="email">Email</label>
                                <input type="email" id="email" class="input-field" name="email" value="<%= user.email %>" disabled />
                            </div>
                        </div>
                        <div class="form-row">
                            <div>
                                <label for="referralCode">Referral Code</label>
                                <input type="text" id="referralCode" class="input-field" name="referralCode" value="<%= user.referralCode %>" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="actions">
                        <button class="cancel-button">Cancel</button>
                        <button class="save-button">Save Changes</button>
                    </div>
                </div>
                <div class="actions">
                    <a href="/newPassword" class="save-button">Create New Password</a>
                </div>
            </div>
            
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



    <script>
      document.querySelector('.save-button').addEventListener('click', async (event) => {
    event.preventDefault();

    const name = document.getElementById('name').value;

    // Client-side validation
    if (!name || name.trim().length < 3) {
        Swal.fire({
            icon: 'error',
            title: 'Invalid Name',
            text: 'Please enter a valid name with at least 3 characters.',
            confirmButtonText: 'OK',
        });
        return;
    }

    // Show a confirmation dialog
    Swal.fire({
        title: 'Are you sure?',
        text: 'Do you want to save these changes?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, Save it!',
        cancelButtonText: 'Cancel',
    }).then(async (result) => {
        if (result.isConfirmed) {
            try {
                const response = await fetch('/updateProfile', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ name }),
                });

                const result = await response.json();

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Profile Updated!',
                        text: 'Your profile has been updated successfully.',
                        confirmButtonText: 'OK',
                    }).then(() => {
                        location.reload(); // Reload the page to reflect changes
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Update Failed',
                        text: result.message || 'Failed to update profile.',
                        confirmButtonText: 'Try Again',
                    });
                }
            } catch (error) {
                console.error('Error updating profile:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred. Please try again later.',
                    confirmButtonText: 'OK',
                });
            }
        } else {
            // Handle the cancel action if needed
            Swal.fire({
                icon: 'info',
                title: 'Cancelled',
                text: 'Your changes were not saved.',
                confirmButtonText: 'OK',
            });
        }
    });
});


    </script>
    
</body>
</html>
<%- include('../user/layout/userFooter.ejs') %>