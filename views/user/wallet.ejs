<%- include('../user/layout/userHeader.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wallet Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .profile-circle {
      width: 128px;
      height: 128px;
      background-color: #f87171;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: auto;
    }
    .profile-circle svg {
      width: 64px;
      height: 64px;
      color: white;
    }
  </style>
</head>
<body class="bg-light">
  <div class="container py-5">
    <!-- Navigation -->
    <nav class="d-flex justify-content-between align-items-center mb-4">
      <div class="text-secondary">
        <span>Home</span> / <span>Wallet</span>
      </div>
      <div>
        Welcome! <span class="text-danger"><%= userName %></span>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="row g-4">
      <!-- Profile Section -->
      <div class="col-md-4 text-center">
        <div class="profile-circle">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
      </div>

      <!-- Balance Card -->
      <div class="col-md-4">
        <div class="card text-white bg-dark text-center py-4">
          <p class="mb-2">Current Balance:</p>
          <h2 class="fw-bold">₹ <%= wallet.balance %></h2>
        </div>
      </div>

      <!-- Actions -->
      <div class="col-md-4">
        <button class="btn btn-dark w-100 mb-3 py-3">Deposit Money</button>
        <button class="btn btn-dark w-100 py-3">Withdraw Money</button>
      </div>
    </div>

    <!-- Transaction History -->
    <div class="mt-5">
      <h3>Transaction History</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% wallet.transactions.forEach(transaction => { %>
            <tr>
              <td><%= new Date(transaction.date).toLocaleString() %></td>
              <td><%= transaction.type %></td>
              <td>₹ <%= transaction.amount %></td>
              <td><%= transaction.description %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<%- include('../user/layout/userFooter.ejs') %>
